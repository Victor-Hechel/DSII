<h1>Cadastrar Programa</h1>

<form method="post" class="form-horizontal" action="/protected/editarProgramaPost/<%=@programa.id%>" enctype="multipart/form-data">

	<div class="row">
		<div class="col-sm-offset-3 col-sm-6" id="fundo">
			<div class="form-group">
				<label for="nome" class="col-sm-3 control-label">Nome: </label>
					<div class="col-sm-8">
						<input type="text" name="nome" id="nome" class="form-control" placeholder="Digite o nome do comunicador..." value="<%= @programa.nome %>" required>			
					</div>
			</div>
			<div class="form-group">
				<label for="comunicador" class="col-sm-3 control-label">Comunicador: </label>
				<div class="col-sm-8">
					<select name="comunicador" class="form-control" id="comunicador">
						<% @comunicadores.each do |comunicador| %>
							<option value="<%= comunicador.id %>"><%= comunicador.nome %></option>
						<% end %>
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="dia" class="col-sm-3 control-label">Dia da semana: </label>
					<div class="col-sm-8">
						<select name="dia" id="dia" required class="form-control">
							<option value="Segunda">Segunda</option>
							<option value="Terca">Terça</option>
							<option value="Quarta">Quarta</option>
							<option value="Quinta">Quinta</option>
							<option value="Sexta">Sexta</option>
							<option value="Sabado">Sábado</option>
							<option value="Domingo">Domingo</option>
						</select>		
					</div>
			</div>
			<div class="form-group">
				<label for="inicio" class="col-sm-3 control-label">Hora de início: </label>
					<div class="col-sm-8">
						<input type="time" name="inicio" id="inicio" class="form-control" value="<%= @programa.inicio %>" required>			
					</div>
			</div>
			<div class="form-group">
				<label for="fim" class="col-sm-3 control-label">Hora de encerramento: </label>
					<div class="col-sm-8">
						<input type="time" name="fim" id="fim" class="form-control" value="<%= @programa.fim %>" required>			
					</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-8">
					<input type="hidden" name="extensao" value = "<%= @programa.extensao %>">
					<input type="file" name="foto" accept="image/*" class="btn btn-default btn-block">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-8">
					<input type="submit" value="Cadastrar" class="btn btn-default btn-block">
				</div>
			</div>	
		</div>
	</div>
</form>